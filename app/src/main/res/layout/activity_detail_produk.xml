<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/detail_gambarBarang"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/detail_namaBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/detail_deskripsiBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp" />

    <TextView
        android:id="@+id/detail_hargaBarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="8dp" />

    <Button
        android:id="@+id/button_beli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Beli Sekarang"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/button_favorit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambahkan ke Favorit"
        android:layout_marginTop="8dp" />
</LinearLayout>
